<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>WaifuImAPI_NET</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>WaifuIM API .NET</Title>
    <Authors>SoNearSonar</Authors>
    <Description>A C# API wrapper for the website waifu.im. A website that has images of anime drawings</Description>
    <PackageProjectUrl>https://github.com/SoNearSonar/WaifuImAPI-NET</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/SoNearSonar/WaifuImAPI-NET</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>c#,api,waifu,image,anime</PackageTags>
    <Version>1.0.1</Version>
    <PackageReleaseNotes>1.0.1: Adjusted namespace of objects, putting them in a Models folder only

1.0.2: Removed Nullable properties on response objects (Settings objects un-affected), replacing them with a default! value</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="Refit" Version="6.3.2" />
    <PackageReference Include="Refit.Newtonsoft.Json" Version="6.3.2" />
  </ItemGroup>

</Project>
